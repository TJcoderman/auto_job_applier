# Copy this file to .env and fill in the secrets before running the app.

# Core configuration
APP_ENV=development
LOG_LEVEL=INFO

# User profile defaults
DEFAULT_SEARCH_KEYWORDS=Software Engineer;Machine Learning Engineer
DEFAULT_SEARCH_LOCATIONS=San Francisco Bay Area;Remote (USA)
TARGET_MIN_COMPENSATION=200000

# LLM settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2

# Scoring settings
SCORING_PROVIDER=openai
SCORING_EMBEDDING_MODEL=text-embedding-3-small
SCORING_FALLBACK_WEIGHT=0.7

# Security settings
ADMIN_USERNAME=admin
# ADMIN_PASSWORD_HASH=  # Use python -m agentic_job_hunter utils hash-password
SECURITY_SESSION_SECRET=change-me

# API keys (prefer storing via keyring: python -m agentic_job_hunter profile set-credential --key OPENAI_API_KEY)
OPENAI_API_KEY=sk-your-openai-key
# GOOGLE_API_KEY=your-google-api-key
# CLAUDE_API_KEY=your-claude-key

# Automation helpers
ANTI_CAPTCHA_API_KEY=
PROXY_URL=
BROWSER_HEADLESS=true
AUTOMATION_AUTO_SUBMIT=false

# Optional credentials (use keyring if possible)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Data storage
DATABASE_PATH=data/agentic_job_hunter.db
RUN_HISTORY_LOG=logs/run_history.jsonl

